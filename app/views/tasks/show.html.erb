<%- model_class = Task -%>
<div class="page-header">
  <h3><%= @task.title %></h3>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @task.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @task.user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:limit) %>:</strong></dt>
  <dd><%= @task.limit %></dd>
  
  <% if @task.categories.any? %>
    <p>Categories: <%= render @task.categories %></p>
  <% end %>
</dl>